
<div class="well form-inline left" style="text-align: left;">
    <fieldset>
        <legend>首页 / 用户信息</legend>
        <div class="control-group">
            <label class="control-label" for="title">用戶名: </label>
            <label class="control-label">
                <% if (locals.current_user) { %>
                    <%= current_user.name %>
                <% }%>
            </label>
        </div>
    </fieldset>
</div>

    <% posts.forEach(function(post, index){  
        if(index % 3 == 0){ %>
        <div class="row">
        <% } %>
    <div class="span4" style="border: 1px solid #dddddd; padding-left: 10px; margin-top: 5px;">
        <h2><%= post.title %></h2>
        <p>作者: <%= post.name %> &nbsp;<%= post.time.minute %></p>
        <p><%- post.post %></p>
    </div>
    <% if(index % 3 == 2){ %>
        </div>
    <% } %>
    <% }) %>
    <% if(posts.length % 3 != 0){%>
        </div>
    <% } %>
